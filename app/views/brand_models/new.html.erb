<div class="card mx-auto" style="max-width: 400px;">
  <div class="card-header">
    <h5 class="card-title text-center">New Model</h5>
  </div>
  <div class="card-body p-2">
    <%= form_with model: @brand_model, data: { turbo: false }, class: "form-inline" do |form| %>
      <div class="mb-1">
        <%= form.label :name, "Brand Model", class: "form-label sr-only" %>
        <%= form.text_field :name, class: "form-control form-control-sm", required: true, placeholder: "Brand Model" %>
      </div>

      <div class="mb-1">
        <%= form.submit class: "btn btn-primary btn-sm w-100" %>
      </div>
    <% end %>
  </div>
</div>
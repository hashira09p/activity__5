<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="card" style="max-width: 400px; width: 100%;">
    <div class="card-header">
      <h5 class="card-title text-center">Edit Product</h5>
    </div>
    <div class="card-body">
      <%= form_with model: @product do |form| %>
        <div class="mb-3">
          <%= form.label :brand_name, class: "form-label" %>
          <%= form.text_field :name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :description, class: "form-label" %>
          <%= form.text_area :description, class: "form-control", rows: 3 %>
        </div>

        <div class="mb-3">
          <%= form.label :quantity, class: "form-label" %>
          <%= form.number_field :quantity, class: "form-control form-control-sm", min: 0, step: 1, required: true, placeholder: "Qty" %>
        </div>

        <div class="mb-3">
          <%= form.label :total_earnings, class: "form-label" %>
          <%= form.text_field :total_earnings, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :company_launched, class: "form-label" %>
          <%= form.date_field :company_launched, class: "form-control" %>
        </div>

        <div class="mb-3 text-center">
          <%= form.submit class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
